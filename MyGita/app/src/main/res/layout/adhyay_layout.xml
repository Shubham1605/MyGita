<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        app:cardElevation="7dp"
        app:cardPreventCornerOverlap="true"
        android:background="@drawable/rounded_corner_adhyay"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingTop="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/adhyayCount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="अध्याय 1"
                android:textStyle="bold"
                android:background="@drawable/border_adhyaytop"
                android:textColor="@color/adhyayCount"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/adhyayDescription"
                android:layout_width="match_parent"
                android:layout_weight="2.5"
                android:layout_height="0dp"
                android:text="दैवासुरसंपद्विभाग योग"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/colorShlokCountOuter"
                android:textSize="20sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>